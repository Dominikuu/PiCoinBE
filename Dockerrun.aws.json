{
    "AWSEBDockerrunVersion": 2, 
    "containerDefinitions": [
        {
            "essential": false,
            "name": "nginx",
            "image": "dominikuu/url-shortener-nginx",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "memory": 100
        },
        {
            "environment": [
                {
                    "name": "POSTGRES_USER",
                    "value": "admin"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "password"
                },
                {
                    "name": "POSTGRES_URL",
                    "value": "postgres://admin:password@localhost:5432/url-shortener"
                },
                {
                    "name": "POSTGRES_DB",
                    "value": "url-shortener"
                },
                {
                    "name": "POSTGRES_HOST",
                    "value": "postgres"
                }
            ],
            "essential": false,
            "name": "postgres",
            "image": "dominikuu/url-shortener-db",
            "portMappings": [
                {
                    "containerPort": 5432,
                    "hostPort": 5432
                }
            ],
            "memory": 100
        },
        {
            "essential": false,
            "image": "redis",
            "name": "redis",
            "portMappings": [
                {
                    "containerPort": 6379,
                    "hostPort": 6379
                }
            ],
            "memory": 50
        },
        {
            "command": [
                "npm",
                "build"
            ],
            "environment": [
                {
                    "name": "POSTGRES_URI",
                    "value": "postgres://admin:password@postgres:5432/url-shortener"
                },
                {
                    "name": "REDIS_URI",
                    "value": "redis://redis:6379"
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "containerPath": "/usr/src/url-shortener-api",
                    "sourceVolume": "_"
                }
            ],
            "name": "url-shortener-api",
            "image": "dominikuu/url-shortener-api",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "memory": 300
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "/"
            },
            "name": "_"
        }
    ]
}